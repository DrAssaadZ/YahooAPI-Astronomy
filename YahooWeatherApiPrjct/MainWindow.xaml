<Window x:Class="YahooWeatherApiPrjct.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YahooWeatherApiPrjct"
        mc:Ignorable="d"
        Title="Yahoo-API" WindowStartupLocation="CenterScreen" Height="450" Width="300" ResizeMode="NoResize">
    <StackPanel Orientation="Vertical">
        <TextBlock Margin="0 30 0 0" TextAlignment="Center" Text="Enter The Country"></TextBlock>
        <TextBox x:Name="countryBox" Width="250" Height="25" Margin="0 10 0 0" VerticalContentAlignment="Center"></TextBox>
        <TextBlock Margin="0 30 0 0" TextAlignment="Center" Text="Enter The City"></TextBlock>
        <TextBox x:Name="cityBox" Width="250" Height="25" Margin="0 10 0 0" VerticalContentAlignment="Center"></TextBox>
        <Button x:Name="operateBtn" Height="30" Width="100" Margin="0 30 0 0" Content="Go!" FontSize="18" Click="operateBtn_Click"></Button>
        <TextBox x:Name="resultBlock" Margin="20" Height="160" Background="Beige" IsEnabled="False" FontSize="28" VerticalContentAlignment="Center" HorizontalContentAlignment="Left"></TextBox>
    </StackPanel>
</Window>
